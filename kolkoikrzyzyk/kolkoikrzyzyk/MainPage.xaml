<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:kolkoikrzyzyk"
             x:Class="kolkoikrzyzyk.MainPage"
             Title="Nick">

    <Grid BackgroundColor="BurlyWood">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Start"
                Text="Start"
                Grid.Row="0"
                Grid.Column="0"
                FontSize="Large"
                Clicked="StartNutton_Clicked"/>
        <Entry x:Name="entryNazwa"
               Placeholder="Nazwa"
               Grid.Row="1"
               Grid.Column="0"
               />



    </Grid>

</ContentPage>
